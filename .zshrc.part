  #PROMPT='%(!.%B%F{red}.%B%F{green}%D{%T} %n@)%m %{$fg_bold[black]%}%? %F{blue}%(!.%1~.%~) ${vcs_info_msg_0_}%F{blue}%(!.#.$)%k%b%f '
  PROMPT='%(!.%B%F{red}.%B%F{green}%D{%T} %n) %F{red}$(arch | cut -c1-1) %{$fg_bold[black]%}%? %F{blue}%(!.%1~.%~) ${vcs_info_msg_0_}%F{blue}%(!.#.$)%k%b%f '
