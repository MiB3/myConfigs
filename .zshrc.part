# chruby
source /Users/Milan/homebrew/opt/chruby/share/chruby/chruby.sh
source /Users/Milan/homebrew/opt/chruby/share/chruby/auto.sh
chruby 2.6.4

# zsh
source /Users/Milan/homebrew/share/zsh-autosuggestions/zsh-autosuggestions.zsh

# homebrew
export PATH="${HOME}/homebrew/bin:${HOME}/homebrew/sbin:${PATH}"

# visual studio code
alias code="open -a 'Visual Studio Code'"

# nvm
export NVM_DIR="$HOME/.nvm"
[ -s "/Users/Milan/homebrew/opt/nvm/nvm.sh" ] && . "/Users/Milan/homebrew/opt/nvm/nvm.sh"  # This loads nvm
[ -s "/Users/Milan/homebrew/opt/nvm/etc/bash_completion.d/nvm" ] && . "/Users/Milan/homebrew/opt/nvm/etc/bash_completion.d/nvm"  # This loads nvm bash_completion

